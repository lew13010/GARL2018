{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gamers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Steam</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gamer in gamers %}
            <tr>
                <td><a href="{{ path('gamer_show', { 'id': gamer.id }) }}">{{ gamer.id }}</a></td>
                <td>{{ gamer.name }}</td>
                <td>{{ gamer.steam }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('gamer_show', { 'id': gamer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('gamer_edit', { 'id': gamer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gamer_new') }}">Create a new gamer</a>
        </li>
    </ul>
{% endblock %}
